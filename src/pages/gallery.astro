---
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Photo Gallery";

// Generate random photo IDs for the gallery
function generateRandomPhotoIds(count: number): number[] {
  const ids = [];
  for (let i = 0; i < count; i++) {
    ids.push(Math.floor(Math.random() * 1000) + 1);
  }
  return ids;
}

// Generate IDs for photos
const featuredPhotoId = Math.floor(Math.random() * 1000) + 1;
const galleryPhotoIds = generateRandomPhotoIds(12);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				line-height: 1.6;
				color: #333;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				min-height: 100vh;
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem;
			}

			.featured-section {
				background: rgba(255,255,255,0.1);
				border-radius: 16px;
				padding: 2rem;
				margin-bottom: 3rem;
				backdrop-filter: blur(10px);
				text-align: center;
			}

			.featured-title {
				color: white;
				font-size: 2rem;
				margin-bottom: 1.5rem;
				text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
			}

			.featured-photo {
				width: 100%;
				max-width: 600px;
				height: 400px;
				object-fit: cover;
				border-radius: 12px;
				box-shadow: 0 12px 40px rgba(0,0,0,0.2);
				transition: transform 0.3s ease;
			}

			.featured-photo:hover {
				transform: scale(1.02);
			}

			.gallery-section {
				background: rgba(255,255,255,0.1);
				border-radius: 16px;
				padding: 2rem;
				backdrop-filter: blur(10px);
				margin-bottom: 2rem;
			}

			.gallery-title {
				color: white;
				font-size: 1.8rem;
				margin-bottom: 2rem;
				text-align: center;
				text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
			}

			.photo-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 1.5rem;
			}

			.photo-item {
				position: relative;
				overflow: hidden;
				border-radius: 12px;
				aspect-ratio: 4/3;
				background: rgba(255,255,255,0.1);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}

			.photo-item:hover {
				transform: translateY(-5px);
				box-shadow: 0 15px 35px rgba(0,0,0,0.3);
			}

			.photo-item img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.3s ease;
			}

			.photo-item:hover img {
				transform: scale(1.05);
			}

			.photo-overlay {
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				background: linear-gradient(transparent, rgba(0,0,0,0.7));
				color: white;
				padding: 1rem;
				transform: translateY(100%);
				transition: transform 0.3s ease;
			}

			.photo-item:hover .photo-overlay {
				transform: translateY(0);
			}

			.refresh-btn {
				display: inline-block;
				background: linear-gradient(45deg, #667eea, #764ba2);
				color: white;
				padding: 0.75rem 1.5rem;
				text-decoration: none;
				border-radius: 8px;
				transition: transform 0.2s ease;
				font-weight: 500;
				border: none;
				cursor: pointer;
				margin: 1rem auto;
				display: block;
				width: fit-content;
			}

			.refresh-btn:hover {
				transform: scale(1.05);
			}


			@media (max-width: 768px) {
				.container {
					padding: 1rem;
				}
				
				.featured-section, .gallery-section {
					padding: 1.5rem;
				}

				.featured-photo {
					height: 250px;
				}

				.photo-grid {
					grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
					gap: 1rem;
				}

				.featured-title {
					font-size: 1.5rem;
				}

				.gallery-title {
					font-size: 1.4rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="container">
			<Navigation currentPath="/gallery" />
			<Header title={pageTitle} subtitle="Discover beautiful random photos from around the world" />

			<!-- Featured Photo Section -->
			<section class="featured-section">
				<h2 class="featured-title">âœ¨ Featured Photo</h2>
				<img 
					src={`https://picsum.photos/600/400?random=${featuredPhotoId}`}
					alt="Featured photo"
					class="featured-photo"
					loading="eager"
				/>
			</section>

			<!-- Gallery Section -->
			<section class="gallery-section">
				<h2 class="gallery-title">ðŸ“¸ Photo Gallery</h2>
				<div class="photo-grid">
					{galleryPhotoIds.map((id, index) => (
						<div class="photo-item">
							<img 
								src={`https://picsum.photos/400/300?random=${id}`}
								alt={`Random photo ${index + 1}`}
								loading="lazy"
							/>
							<div class="photo-overlay">
								<p>Photo #{id}</p>
							</div>
						</div>
					))}
				</div>
				<button class="refresh-btn" onclick="window.location.reload()">
					ðŸ”„ Load New Photos
				</button>
			</section>

			<Footer />
		</div>

		<script>
			// Add some interactivity for better randomization
			document.addEventListener('DOMContentLoaded', () => {
				// Optional: Add a subtle animation when images load
				const images = document.querySelectorAll('.photo-item img, .featured-photo');
				images.forEach((img) => {
					img.addEventListener('load', () => {
						img.style.opacity = '0';
						img.style.transition = 'opacity 0.5s ease';
						setTimeout(() => {
							img.style.opacity = '1';
						}, 100);
					});
				});
			});
		</script>
	</body>
</html>