---
interface Props {
  headline?: string;
  subheadline?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  headline = "Build Amazing Experiences",
  subheadline = "Create fast, modern websites with the power of Astro and cutting-edge web technologies.",
  ctaText = "Get Started",
  ctaLink = "#features"
} = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <h1 class="hero-headline">{headline}</h1>
    <p class="hero-subheadline">{subheadline}</p>
    <a href={ctaLink} class="hero-cta">{ctaText}</a>
  </div>
  <div class="hero-background">
    <div class="hero-circle hero-circle-1"></div>
    <div class="hero-circle hero-circle-2"></div>
    <div class="hero-circle hero-circle-3"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    padding: 4rem 2rem;
    margin-bottom: 3rem;
    text-align: center;
    overflow: hidden;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-headline {
    font-size: 3.5rem;
    font-weight: bold;
    color: white;
    margin-bottom: 1.5rem;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
  }

  .hero-subheadline {
    font-size: 1.25rem;
    color: white;
    opacity: 0.9;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
  }

  .hero-cta {
    display: inline-block;
    background: linear-gradient(45deg, #667eea, #764ba2);
    color: white;
    padding: 1rem 2.5rem;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .hero-cta:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 40px rgba(102, 126, 234, 0.4);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }

  .hero-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    animation: heroFloat 6s ease-in-out infinite;
  }

  .hero-circle-1 {
    width: 120px;
    height: 120px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .hero-circle-2 {
    width: 80px;
    height: 80px;
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .hero-circle-3 {
    width: 60px;
    height: 60px;
    top: 30%;
    right: 25%;
    animation-delay: 4s;
  }

  @keyframes heroFloat {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
      opacity: 0.6;
    }
  }

  /* Tablet responsive */
  @media (max-width: 1024px) {
    .hero {
      padding: 3rem 1.5rem;
      min-height: 350px;
    }

    .hero-headline {
      font-size: 3rem;
    }

    .hero-subheadline {
      font-size: 1.1rem;
    }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 2.5rem 1rem;
      min-height: 300px;
      border-radius: 12px;
    }

    .hero-headline {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .hero-subheadline {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .hero-cta {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }

    .hero-circle-1 {
      width: 80px;
      height: 80px;
    }

    .hero-circle-2 {
      width: 60px;
      height: 60px;
    }

    .hero-circle-3 {
      width: 40px;
      height: 40px;
    }
  }

  /* Small mobile responsive */
  @media (max-width: 480px) {
    .hero {
      padding: 2rem 0.75rem;
    }

    .hero-headline {
      font-size: 2rem;
    }

    .hero-subheadline {
      font-size: 0.95rem;
    }

    .hero-cta {
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>